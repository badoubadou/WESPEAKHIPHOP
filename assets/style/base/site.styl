html
	width 100%
	height 100%
	font-size 100%
	position relative
	overflow hidden

body
	font-family $ft-family-primary
	font-size 14px
	margin 0 
	width 100%
	height 100%
	text-transform uppercase

a
	color $ft-color-primary
	text-decoration none
	transition color
	transition-duration 0.4s
	&:visited
		color $ft-color-primary
		
	&:hover
		color $ft-color-primary
		.hasHover &
			color $ft-color-primary
	
	&.normal
		color $ft-color-tertiary
		text-decoration underline

////stiky footer
html,
body
	height 100%
			
p
	word-wrap break-word
	&:empty
		display none

.opacity_0
	opacity 0

.hide
	display none !important

.absolute
	position absolute

.relative
	position relative

.centered
	center()
	
.centered_with_tweenmax
	top 50%
	left 50%
	
.btn
	cursor pointer
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

.triangle
	display block
	triangle(10px, 10px)
	width 10px
	left -10px
	vert_align_middle()
	
	&.small
		triangle(6px, 6px)
		
.plus
	left -10px
	vert_align_middle()		
	&:before
		pseudo_full(#FFF, 1, 8px, 2px)
		vert_align_middle()
		left 3px
	&:after
		pseudo_full(#FFF, 1, 2px, 8px) 
		vert_align_middle()

.round_btn
	border-radius 10px
	line-height 20px
	height 20px
	@media $landscape
		border-radius 15px
		line-height 30px
		height 30px
		
		
.yellow_btn
	color #000000
	background $yellow	

.white_btn
	color #000000
	background #fff

.grey_btn
	color #ffffff
	background #333333

	