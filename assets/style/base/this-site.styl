.full_width
	width 100%
	
.full_height
	height 100%
	
.full_height_minus_footer_minus_header_mobile
	transition height 0.5s ease-in-out 
	height "calc(100% - %s - %s)" % ($height_footer $height_header_info_mobile)
	@media $landscape
		top 0
		height "calc(100% - %s)" % ($height_footer )
		
.layer_bottom
	z-index -1
	
.layer_0
	z-index 0
	
.layer_1
	z-index 1

.layer_2
	z-index 2
	
.layer_3
	z-index 3
		
.layer_4
	z-index 4
	
.layer_5
	z-index 5

.layer_top
	z-index 10
	
.layer_top_plus
	z-index 11

.overflow_hidden
	overflow hidden

.short_text
	@media $landscape
		display none !important
.long_text
	display none !important
	@media $landscape
		display block !important

.site
	position relative
	width 100%
	height 100%
	
#mask_shield
	background #000
	top 0
	left 0
	z-index 100
		
#facea
#faceb
	position absolute
	border-radius 50%
	left 50%
	top 50%
	transform translate(-50%,-50%)
		
#block_video_disk
	border-radius 50%
	
#mouse_over_bg
	opacity 0
	top 0
	left 0
	background red
	
.hidden
	visibility hidden
	
.trans
	opacity 0

body
html
	background $light-yellow
	background-color $light-yellow

#main
	@media $landscape
		width calc(100% - 300px)
		margin-left 300px
	
	@media $landscape_desktop
		width calc(100% - 350px)
		margin-left 350px
	
	@media $mobile_landscape
		width calc(100% - 150px)
		margin-left 150px
	
		
#left_col
	height 20vh
	@media $landscape	
		width 300px
		height "calc(100% - %s)" % ($height_footer)
		background $yellow
		position absolute
	
	@media $landscape_desktop	
		width 350px
		height "calc(100% - %s)" % ($height_footer)
		background $yellow
		position absolute
		
	@media $mobile_landscape
		width 150px
		height "calc(100% - %s)" % ($height_footer)
		

.logo-black-st0
	fill #000000
.logo-black-st1
	fill none
	stroke #FFFFFF
	stroke-width 28
	stroke-linejoin bevel
	stroke-miterlimit 10
.logo-black-st2
	fill none
	stroke #FFFFFF
	stroke-width 21
	stroke-miterlimit 10
.logo-black-st3
	fill none
	stroke #FFFFFF
	stroke-width 21
	stroke-linecap square
	stroke-linejoin bevel
	stroke-miterlimit 10