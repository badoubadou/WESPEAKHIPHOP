#main_footer.footer.layer_top
	include ../block_help/index.pug

	.warp_ul_footer
		ul#left-ul
			li.seperateur
				a#apropos_btn(href='#abouttxt' title=TRANSLATION.a_propos[langage])
					| #{TRANSLATION.a_propos[langage]}
			li.seperateur
				a#credit_btn(href='#credittxt' title=TRANSLATION.credit[langage])
					| #{TRANSLATION.credit[langage]}
			li
				a#mail_btn(href='#contacttxt' title=TRANSLATION.contact[langage])
					| #{TRANSLATION.contact[langage]}
		
		ul#right-ul
			li
				if langage == 'en'
					a(href='http://wespeakhiphop.fr' title='version fran√ßaise')
						span.short_text
							| #{TRANSLATION.language_name_short[langage]}
						span.long_text
							| #{TRANSLATION.language_name[langage]}
				else
					a(href='http://wespeakhiphop.com' title='english version')
						span.short_text
							| #{TRANSLATION.language_name_short[langage]}
						span.long_text
							| #{TRANSLATION.language_name[langage]}
			li
				span#sound.actif
					include ../../../public/image/unmute.svg
			li
				span.myfullscreen
					#fs
						img(src='https://d25xbwtykg1lvk.cloudfront.net/fullscreen.svg', alt='fullscreen')
					#fsactif
						img(src='https://d25xbwtykg1lvk.cloudfront.net/fullscreen_actif.svg', alt='fullscreen_actif')
			
			li
				a#share(href='#shareinfo' title=TRANSLATION.partager[langage])
					img(src='https://d25xbwtykg1lvk.cloudfront.net/share.svg', alt='share')
					span.txt
						| #{TRANSLATION.partager[langage]}
