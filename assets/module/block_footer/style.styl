.footer
	background #000
	height $height_footer
	width 100%
	bottom 0
	position absolute
	color #fff
	font-size .7em

	ul 
		margin 0
		padding 0
		display inline-block
		
		li
			display inline-block
			line-height $height_footer
			a
				line-height $height_footer
				padding 0 30px
				height 100%
				display block
				color #fff
				&:hover
					color $light-grey
			
			span
				display block
				padding 0 30px
				
		
		&#mode_switcher li a		
			background $dark-grey
			&.selected
			&:hover
				color #000
				background $yellow
		
		&#infos
			position absolute
			right 0 
			li a
				padding 0 10px
			li span 
				padding 0 10px
				
	#share
		svg
			width 13px
			height 13px

	#sound
	#fullscreen
		width 15px
		height 40px
		display block
		margin 0
		cursor pointer
		svg
			width 15px
			height 15px			
			#lign
				display none
		&.actif
			svg #lign
				display block
				

	#fullscreen
		@media $mobile_et_ipad
			display none