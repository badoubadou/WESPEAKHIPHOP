.footer
	background #191919
	height $height_footer
	width 100%
	bottom 0
	position absolute
	color #989898
	font-size .7em

	.warp_ul_footer
		@media $ipad
			width auto
			position absolute
			display inline-block
			right 0
	ul 
		margin 0
		padding 0
		display inline-block
		

		&#right-ul
			right 0
			text-align right
			position absolute
			
			@media $ipad
				right auto
				position relative
		
		&#left-ul
			position absolute
			left 5px
			li a
				padding 0 5px
			@media $ipad
				left auto 
				padding 0 10px
				position relative
			li span 
				padding 0 3px
				@media $ipad
					padding 0 10px

		li
			display inline-block
			line-height $height_footer
			position relative
			font-weight 100
			color #989898
			
			@media $ipad
				&.seperateur
					padding-right 11px
					&:after
						pseudo_full(#989898, 1, 1px, 6px)
						vert_align_middle()
						left auto
						right 1px

			a
				line-height $height_footer
				padding 0 5px
				@media $ipad
					padding 0 15px
				height 100%
				display block
				color #989898
				&:hover
					color $light-grey
			
			span
				display block
				padding 0 5px
				
			#sound
			.myfullscreen
				@media $ipad
					padding 0 15px
				
		
		&#mode_switcher li a		
			background $dark-grey
			&.selected
			&:hover
				color #989898
				background $yellow
		
		
						
	#share
		svg
			width 13px
			height 13px
			display inline-block
		
		.txt
			display none
			@media $ipad
				display inline-block

#sound
.myfullscreen
	width 15px
	height 40px
	display block
	margin 0
	cursor pointer
	svg
		width 15px
		height 15px			
		#lign
			display none
	&.actif
		svg #lign
			display block
	


.myfullscreen
	#fsactif
		display none
	&.actiffullscreen
		#fs
			display none
		#fsactif
			display block
		
