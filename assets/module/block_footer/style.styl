.footer
	background #000
	height 40px
	width 100%
	bottom 0
	position absolute
	color #fff

	ul
		padding 0
		margin 0
		display inline-block
		decoration none
		
		#sound
			svg
				width 40px
				height 40px
				#lign
					display none
			&.actif
				svg #lign
					display block	


		&#infos
			position absolute
			right 0
		
		li
			display inline-block
			a
			span
				padding 0 30px
				color #fff
				line-height 40px
				&:hover
					text-decoration none
					color $light-grey
		
		&#mode_switcher li a
			display block
			width 100%
			height 100%
			background $dark-grey
			&.selected
			&:hover
				background $yellow
	