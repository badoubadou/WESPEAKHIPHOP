#disk_hole
	width 20px
	height 20px
	background #000
	border-radius 50%

#marker
	display block
	width 10px
	height (($size_disk_small - $size_video_small) / 2)
	top 0
	align_middle()
	svg
		width auto
		height (($size_disk_small - $size_video_small) / 2)
	@media $ipad
		height (($size_disk_medium - $size_video_medium) / 2)
		svg
			width auto
			height (($size_disk_medium - $size_video_medium) / 2)		
	@media $large_screen
		height (($size_disk_large - $size_video_large) / 2)
		svg
			width auto
			height (($size_disk_large - $size_video_large) / 2)	

.circular_mask
	overflow hidden
	border-radius 50%

.size_video
	width $size_video_small
	height $size_video_small
	.player-dimensions
		width $size_video_small
		height $size_video_small
		
	@media $ipad
		width $size_video_medium
		height $size_video_medium
		.player-dimensions
			width $size_video_medium
			height $size_video_medium
		
	@media $large_screen
		width $size_video_large
		height $size_video_large
		
		.player-dimensions
			width $size_video_large
			height $size_video_large	
		
.size_disk
	width $size_disk_small
	height $size_disk_small
	
	@media $ipad
		width $size_disk_medium
		height $size_disk_medium
	@media $large_screen
		width $size_disk_large
		height $size_disk_large

.size_platine
	width $size_disk_small+$epaiseur_platine
	height $size_disk_small+$epaiseur_platine
	
	@media $ipad
		width $size_disk_medium+$epaiseur_platine
		height $size_disk_medium+$epaiseur_platine
	@media $large_screen
		width $size_disk_large+$epaiseur_platine
		height $size_disk_large+$epaiseur_platine

	
#mask_video
	border 8px solid #000
	
#disk
	// border 2px solid #000
	cursor url("https://s3.eu-west-3.amazonaws.com/wespeakhiphop-assets/hand.png"), auto;
	
