#bg_disk
	display block
	border-radius 50%
	width 100%
	height 100%
	background $yellow
	z-index -1
	
#play-video-btn
	text-transform uppercase
	background $yellow
	border-radius 10px
	line-height 20px
	height 20px
	text-align center
	center()
	bottom 30px
	font-size .6em
	padding 0 15px
	width 100px
	display block
	margin-top 60px