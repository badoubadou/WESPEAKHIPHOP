#disk_hole
	width 10px
	height 10px
	background #000
	border-radius 50%

#marker
	display block
	width 25px
	height (($size_disk_small - $size_video_small) / 2)
	top 0
	align_middle()
	// transform translateX(-100%)
	opacity 0.97
	svg
		width auto
		height (($size_disk_small - $size_video_small) / 2)
	@media $ipad
		height (($size_disk_medium - $size_video_medium) / 2)
		svg
			width auto
			height (($size_disk_medium - $size_video_medium) / 2)		
	@media $large_screen
		height (($size_disk_large - $size_video_large) / 2)
		svg
			width auto
			height (($size_disk_large - $size_video_large) / 2)	

.circular_mask
	overflow hidden
	border-radius 50%
	

.size_video
	width $size_video_small
	height $size_video_small
	.player-dimensions
	video
		width $size_video_small
		height $size_video_small
		
	@media $ipad
		width $size_video_medium
		height $size_video_medium
		.player-dimensions
		video
			width $size_video_medium
			height $size_video_medium
		
	@media $large_screen
		width $size_video_large
		height $size_video_large
		
		.player-dimensions
		video
			width $size_video_large
			height $size_video_large	
		
.size_disk
	width $size_disk_small
	height $size_disk_small
	
	@media $ipad
		width $size_disk_medium
		height $size_disk_medium
	@media $large_screen
		width $size_disk_large
		height $size_disk_large

.size_platine
	width $size_platine_small
	height $size_platine_small
	
	@media $ipad
		width $size_disk_medium+$epaiseur_platine
		height $size_disk_medium+$epaiseur_platine
	@media $large_screen
		width $size_disk_large+$epaiseur_platine
		height $size_disk_large+$epaiseur_platine
	
#mask_video
	border 3px solid #000
	
#disk
	cursor url("https://s3.eu-west-3.amazonaws.com/wespeakhiphop-assets/hand-small.png"), auto;
	
#bg_disk
	display block
	border-radius 50%
	width 100%
	height 100%
	background $yellow
	z-index -1
	
.lign_svg
	center()
	width $size_disk_small
	height $size_disk_small
	
	@media $ipad
		width $size_disk_medium - 10px
		height $size_disk_medium - 10px
	@media $large_screen
		width $size_disk_large - 10px
		height $size_disk_large  - 10px
	
#play-video-btn
#play-video-btn-mobile
	text-transform uppercase
	background $yellow
	border-radius 10px
	line-height 20px
	height 20px
	text-align center
	align_middle()
	font-size .6em
	padding 0 15px
	width 90px
	bottom 40px
	span
		top 1px
		position relative
	.triangle
		position absolute
		vert_align_middle()
		left 9px
	
	span.txt
		position relative
		left 5px

#play-video-btn-mobile
	bottom auto
	top 5px
	
	@media $ipad
		display none


#pause-video-btn
	bottom 40px
	width auto
	display block
	right 10px
	position absolute
	padding 0px 20px
	font-size .7em
	span:last-child
		display none
	
	&.paused
		color #333333
		background $yellow
		span:first-child
			display none	
		span:last-child
			display inline-block
	
	@media $ipad
		right 30px
	
	