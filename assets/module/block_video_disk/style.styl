#marker
	display block
	width 10px
	height (($size_disk_small - $size_video_small) / 2)
	top 0
	background #000
	align_middle()
	@media $ipad
		height (($size_disk_medium - $size_video_medium) / 2)
		
	@media $large_screen
		height (($size_disk_large - $size_video_large) / 2)

.circular_mask
	overflow hidden
	border-radius 50%

.size_video
	width $size_video_small
	height $size_video_small
	
	@media $ipad
		width $size_video_medium
		height $size_video_medium
		
	@media $large_screen
		width $size_video_large
		height $size_video_large
		
		.player-dimensions
			width $size_video_large
			height $size_video_large	
		
.size_disk
	width $size_disk_small
	height $size_disk_small
	
	@media $ipad
		width $size_disk_medium
		height $size_disk_medium
	@media $large_screen
		width $size_disk_large
		height $size_disk_large
	
#mask_video
	border 8px solid #000
	
#disk
	border 2px solid #000
	cursor url("wespeakhiphop/images/hand.png"), auto;
	
#disk_lign
	background $yellow
	
#play-video-btn
	text-transform uppercase
	background $yellow
	border-radius 10px
	line-height 20px
	height 20px
	text-align center
	center()
	bottom 30px
	font-size .6em
	padding 0 15px
	width auto
	display block
	margin-top 60px