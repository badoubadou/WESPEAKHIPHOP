#disk_hole
	width 10px
	height 10px
	background #000
	border-radius 50%

#marker
	display block
	width 25px
	height (($size_disk_small - $size_video_small) / 2)
	top 0
	align_middle()
	// transform translateX(-100%)
	opacity 0.97
	svg
	img
		width auto
		height (($size_disk_small - $size_video_small) / 2)
	@media $landscape
		height (($size_disk_medium - $size_video_medium) / 2)
		svg
		img
			width auto
			height (($size_disk_medium - $size_video_medium) / 2)		
	

.circular_mask
	overflow hidden
	border-radius 50%
	

.size_video
	width $size_video_smaller
	height $size_video_smaller
	.player-dimensions
		video
			width $size_video_smaller
			height $size_video_smaller
			
	@media $large_portrait
		width $size_video_small
		height $size_video_small
		.player-dimensions
		video
			width $size_video_small
			height $size_video_small
		
	@media $landscape
		width $size_video_medium
		height $size_video_medium
		.player-dimensions
		video
			width $size_video_medium
			height $size_video_medium		

	@media $mobile_landscape
		width 120px
		height 120px
		.player-dimensions
		video
			width 120px
			height 120px
	
	@media $landscape_verybig
		width $size_video_large
		height $size_video_large
		.player-dimensions
		video
			width $size_video_large
			height $size_video_large
		
.size_disk
	width $size_disk_smaller
	height $size_disk_smaller
	
	@media $large_portrait
		width $size_disk_small
		height $size_disk_small
		
	@media $landscape
		width $size_disk_medium
		height $size_disk_medium

	@media $landscape_desktop
		width $size_disk_large
		height $size_disk_large
		
	@media $mobile_landscape
		width $size_disk_large
		height $size_disk_large

.size_platine
	width $size_platine_smaller
	height $size_platine_smaller
	
	@media $large_portrait
		width $size_platine_small
		height $size_platine_small

	@media $landscape
		width $size_platine_medium
		height $size_platine_medium
		max-width auto
		max-height auto
	
	@media $landscape_desktop
		width $size_platine_large
		height $size_platine_large
			
	@media $mobile_landscape
		width $size_platine_large
		height $size_platine_large
	
.lign_svg
	center()
	width $size_ligndisk_smaller
	height $size_ligndisk_smaller
	
	@media $large_portrait
		width $size_ligndisk_small
		height $size_ligndisk_small
		
	@media $landscape
		width $size_ligndisk_medium
		height $size_ligndisk_medium
		
	@media $landscape_desktop
		width $size_ligndisk_large
		height $size_ligndisk_large

	@media $mobile_landscape
		width $size_ligndisk_large
		height $size_ligndisk_large


.lign_svg img
	width 100%
	height auto
	
.lign_svg #svg_txt_circ
	center()
	width $size_video_smaller + 30px
	height $size_video_smaller + 30px
			
	@media $large_portrait
		width $size_video_small + 35px
		height $size_video_small + 35px
		
	@media $landscape
		width $size_video_medium + 35px
		height $size_video_medium + 35px
		
	@media $mobile_landscape
		width 120px  + 20px
		height 120px + 20px
		
	@media $landscape_verybig
		width $size_video_large + 35px
		height $size_video_large + 35px
		
.txt_in_curve
	font-size 25px
		
#mask_video
	border 3px solid #000
	
#disk
	cursor url('https://d2p8kxfsucab5j.cloudfront.net/hand-small.png') 30 40, auto;
	cursor -webkit-image-set(url('https://d2p8kxfsucab5j.cloudfront.net/hand-small.png') 1x,url('https://d2p8kxfsucab5j.cloudfront.net/hand.png') 2x) 30 40, auto
	
#bg_disk
	display block
	border-radius 50%
	width 100%
	height 100%
	background $yellow
	z-index -1

#pause-video-btn
#play-video-btn
	text-transform uppercase
	background $yellow
	border-radius 10px
	line-height 20px
	height 20px
	text-align center
	align_middle()
	padding 0 5px
	bottom 15px
	@media $landscape
		bottom 40px
	
	@media $landscape_desktop
		padding 0 15px

	span
		position relative
	.triangle
		position absolute
		vert_align_middle()
		left 9px
	
	span.txt
		position relative
		left 5px

#pause-video-btn
	width 40px
	display block
	right 10px
	position absolute
	padding 0px 20px
	color #333333
	bottom 15px
	@media $landscape
		bottom 20px
		
	@media $mobile_landscape
		bottom 15px
	
	span:last-child
		display none
		
	&.paused
		background $yellow
		span:first-child
			display none	
		span:last-child
			display inline-block
	