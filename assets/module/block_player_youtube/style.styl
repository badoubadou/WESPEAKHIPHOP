@import 'nib'
.video-container
	height 0
	width 100%
	max-width 178vh
	center()
	padding-bottom 53.5%
	max-height 100vh
	
	.myfullscreen
		right 10px
		bottom 0
		position absolute
		width 25px
		z-index 2
		transition .5s bottom ease   
		svg
			width 25px
			height 25px
		
	.plyr--hide-controls ~ .myfullscreen
		bottom -150%
		
	.plyr
		vert_align_middle()
		top 50%
		height 100%
		max-height 100vh
		position absolute
		width 100%
	
	.plyr__controls
		padding-right 40px
		background #000
		margin-right 0

	&.with_btn_skip
		.myfullscreen
			right 150px
			
		.plyr__controls
			padding 10px 180px 10px
	
	.plyr__video-wrapper
		top 0
		transform none
		padding-bottom 0
		height 100%

	.hider_logo
		right 0px
		bottom 0
		position absolute
		width 200px
		height 60px
		z-index 1
		display none
		background linear-gradient(to right, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 1%,rgba(0,0,0,1) 38%,rgba(0,0,0,1) 100%)
	
	.hider_logo.hide_hider
		opacity 0
		transition .5s opacity ease 3s
		
	