@import 'nib'
.video-container
	height 0
	width 100%
	max-width 178vh
	center()
	padding-bottom 56%
	
	.myfullscreen
		z-index 10
		right 10px
		bottom 0
		position absolute
		width 25px
		transition .5s bottom ease   
		svg
			width 25px
			height 25px
		
	.plyr--hide-controls ~ .myfullscreen
		bottom -150%
		
	.plyr
		height 100%
		max-height 100%
		position absolute
		width 100%
	
	.plyr__controls
		padding 10px 40px 10px

	&.with_btn_skip
		.myfullscreen
			right 150px
			
		.plyr__controls
			padding 10px 180px 10px
	
	.plyr__video-wrapper
		top 0
		transform none
		padding-bottom 0
		height 100%

	.hider_logo
		right 0px
		bottom 0
		position absolute
		width 100%
		height 10px
		z-index 1
		background #000000
	
	.hider_logo.hide_hider
		opacity 0
		transition .5s opacity ease 3s
		
	