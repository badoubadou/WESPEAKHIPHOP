@import 'nib'
.video-container
	height 0
	width 100%
	max-width 178vh
	center()
	padding-bottom 56.25%
	
	&.quatre_tier
		padding-bottom 70%

	.myfullscreen
		z-index 10
		right 10px
		bottom 0
		position absolute
		width 25px
		transition .4s bottom ease   
		svg
			width 25px
			height 25px
		
	.plyr--hide-controls .myfullscreen
		bottom -40px
		
	.plyr
		vert_align_middle()
		height 100%
		max-height 100vh
		position absolute
		width 100%
		
	.plyr__controls
		padding 10px 50px 10px 10px

	&.with_btn_skip
		.myfullscreen
			right 128px
			bottom 18px
		.plyr--hide-controls
			.myfullscreen
				bottom -40px
		
		.plyr__controls
			padding 10px 160px 10px 10px
			bottom 20px
	
	.plyr__video-wrapper
		top 0
		transform none
		padding-bottom 0
		height 100%

	.hider_logo
	.hider_top
		right 0px
		bottom -1px
		position absolute
		width 100%
		height 70px
		z-index 100
		background #000000
	
	.hider_top
		top -1px
		bottom auto
	
	.warp_custom_btn
		width 100%
		position absolute
		bottom 0
		

	.hider_logo.hide_hider
		bottom -70px
		transition .5s bottom ease 3s
		
	.hider_top.hide_hider
		top -70px
		transition .5s top ease 3s
	