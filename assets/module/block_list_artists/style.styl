#list_artists
	on-circle(28, $size_name_circle_small, 250px)	
	@media $ipad	
		on-circle(28, $size_name_circle_medium, 250px)
	@media $large_screen
		on-circle(28, $size_name_circle_large, 250px)

	li a
		bottom 0
		center()
		font-size .75em
		&.selected
			font-weight 900
		span.dot
			display none
			
		@media $mobile

			span.txt
				display none
			span.dot
				background #000
				display block
				width 7px
				height 7px
				border-radius 50%