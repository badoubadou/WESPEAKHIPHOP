	@media $mobile_landscape
		display none

	li a
		bottom 0
		font-size .65em
		color #000
		position absolute
		top 0
		width 100%
		align_middle()
		font-weight 700
		&:hover
		&.selected
			color #000
			.warp_contry .txt
				font-weight 900
			
		span.txt
			display none
		span.dot
			background $grey
			display block
			width 4px
			height 4px
			border-radius 50%	
			
		.warp_contry
			display none	
			font-size 1em
			position relative
			@media $landscape
				display block
				.contry
					position relative			
					.txt
						position relative
					&:after
						pseudo_full($yellow)
						width calc( 100% + 10px )
						transition all .5s ease
						border-radius 5px
						opacity 0
						z-index -1
						margin 5px
						height 15px
						top -8px
						left -10px
						
		&:hover
		&.selected	
			.warp_contry
				.contry:after
					opacity 1
					font-weight 500
				
		@media $landscape
			span.dot
				display none
			span.txt
				display inline-block
				line-height 1.1em
				
		@media $mobile_landscape
			span.txt
				display none
			span.dot
				background $grey
				display block
				width 4px
				height 4px
				border-radius 50%