	.warp_tuto
		text-align center
		@media $landscape
			width 100%
			
		.txt
			color $yellow
			text-transform none	
			
		.content
			width 90%
			@media $landscape
				width auto
		
	.shield
		opacity .8
		width 100%
		height 100%
		background #000	
		top 0
		left 0
		z-index -1
	
	.fleche
		width 80px
		left 32%
		position absolute
		margin-bottom 30px
		@media $landscape
			left 12%
			width 130px
		
		@media $mobile_landscape
			display none
		
	.btn_get_it
		display inline-block
		padding 0 20px
		margin 15px
		
		@media $mobile_landscape
			font-size .7em
		
	.hand
		position absolute
		left 15%
		top 130px
		@media $landscape
			left 0px
		
		img
			width 30px
			height 40px