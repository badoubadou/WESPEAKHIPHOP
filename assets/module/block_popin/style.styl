#popin
	.contentpopin 
		width 60%
		margin auto
		.logo		
			padding 10px 0
			svg
				width 100%
				height auto 

	.sharebtn
		list-style-type none
		margin 0
		padding 10px 0
		li
			display inline-block
		li
		a
		svg
			width 50px
			height 50px

	.sharesite
		border-top 1px solid #000
		padding 10px 0

	#close
		width 30px
		height 30px
		position absolute
		top 10px
		right 10px

	&:after
		pseudo_full( #000 , .7 )
		z-index -1
	
	// #shareinfo:after
	// 	pseudo_full( #000 , .7 )
		
	.block
		width 20%
		height 70%
		
		&.big
			width 50%
			height 70%	

	.yellow
	.white
		width 100%	
	.yellow
		background $yellow
	.white
		background #FFF
		
	.name
		text-transform uppercase
		font-family $ft-family-secondary
		font-size 4em
		line-height .8em
	
	.name
	.date
		color $yellow
	
	.contry
		color #fff

	.date
	.contry
		font-size 4em
		font-family $ft-family-secondary
		font-weight 100
	
	.date
		padding-right 20px
	
	.bio
		text-transform none
		color #fff
		margin-bottom 20px

	#back
		background $grey
		
	.btn
		display inline-block
		padding 0 10px
		width auto
		font-size .8em
		margin-right 20px
		
