#popin.absolute.layer_top_plus.full_height.full_width
	.intro_page.centered.layer_top_plus
		.layer_1#logowhite.hidden.logo(data-animstatus='waiting-init')
			//- include ../../../public/image/logo-white.svg
			if langage == 'fr'
				include ../../../public/image/logo.svg
			else
				include ../../../public/image/logo-en.svg


		.btn_intro
			if langage == 'en'
				a(href='#')#enter_site.btn.round_btn.yellow_btn
					| #{TRANSLATION.language_btn_en[langage]}
				a(href='http://www.wespeakhiphop.fr' title='version fran√ßaise')#other_lang.btn.round_btn.white_btn
					| #{TRANSLATION.language_btn_fr[langage]}
			else
				a(href='http://www.wespeakhiphop.com' title='english version')#other_lang.btn.round_btn.white_btn
					| #{TRANSLATION.language_btn_en[langage]}
				a(href='#')#enter_site.btn.round_btn.yellow_btn
					| #{TRANSLATION.language_btn_fr[langage]}

	include ../block_spiner/index.pug
	include ../block_player_youtube/index.pug

	#abouttxt.hide.block.big.centered.layer_top
		if langage == 'en'
			include about.pug
		else
			include apropos.pug
	#credittxt.hide.block.big.centered.layer_top
		if langage == 'en'
			include credit-en.pug
		else
			include credit-fr.pug
	#contacttxt.hide.block.big.centered.layer_top
		include contact.pug
			
	#artist_info.hide.layer_top
		each video in videos
			.info.hide
				- var title_video = video.title
				.name
					| !{video.title}
				each meta in video.postmeta
					if meta.meta_key == 'date'
						span.date= meta.meta_value
			
				each cat in video.category
					if cat.domain == 'pays'
						span.contry= cat['#text']

				each meta in video.postmeta
					if meta.meta_key == 'description'
						.bio
							| !{meta.meta_value}

				each meta in video.postmeta
					if meta.meta_key == '_ratio_video'
						- var youtube_ratio = meta.meta_value

				each meta in video.postmeta
					if meta.meta_key == 'video'
						- var youtube_link = meta.meta_value


		a(href='', data-ratiovideo=4).startvideofrompopin.round_btn.btn.yellow
			| #{TRANSLATION.startvideo[langage]}

		#back.round_btn.btn
			| #{TRANSLATION.back[langage]}

	#shareinfo.hide.layer_top
		.centered.layer_top
			div
				.contentpopin
					.logo#logosharesite
						svg(viewBox="0 0 52 32"  xmlns="http://www.w3.org/2000/svg")
							use(href='#logopartenaire-logo-share-white')

					.sharesite
						.txt
							| #{TRANSLATION.sharesite[langage]}
						include share.pug
						a.txt(href="https://www.facebook.com/WESPEAKHH/" target="_blank")
							| #{TRANSLATION.followusfb[langage]}
						a.txt(href="https://www.instagram.com/wespeakhiphop.official/" target="_blank")
							| #{TRANSLATION.followusinsta[langage]}

	#donationinfo.hide.layer_top
		.centered.layer_top
			div
				.contentpopin
					| !{TRANSLATION.txt_donation[langage]}
					a.btn.round_btn.donation_link.yellow(href=TRANSLATION.donate_link[langage] title=TRANSLATION.donation[langage] target="_blank")
						| #{TRANSLATION.donation[langage]}

			

						
	#close.layer_top.btn.hide
		span.cross
		