.header
	@media $mobile_et_ipad
		width 100%
		position absolute 
		background $yellow
		
	@media $mobile
		height $height_header_info_mobile
			
	@media $ipad
		height $height_header_info_ipad
		
	@media $desktop
		z-index 1
		width auto
		display block
		position relative
		width 215px
		
.logoWSH
	left 10px
	top 10px
	position relative
	
	@media $mobile_et_ipad
		vert_align_middle()
			svg
				width auto
	
	@media $mobile
		left 20px
		svg
			height $height_header_info_mobile * .5

	@media $ipad
		left 30px
		top 30px
		svg
			height $height_header_info_ipad * .5
	
	@media $desktop
		svg
			width 215px
			height auto		