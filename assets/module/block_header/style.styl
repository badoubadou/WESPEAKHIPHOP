.header
	transition background-color 2s 
	width 100%
	position absolute 
	background $yellow	
	height $height_header_info_mobile
			
	@media $landscape
		height $height_header_info_ipad
		margin 20px
		width calc( 100% - 40px)
			
	@media $landscape_desktop
		z-index 1
		width auto
		display block
		position relative	
		margin 30px
		
	@media $mobile_landscape
		height calc( 100% - 225px)
		margin 15px 5px
		width calc( 100% - 10px)
		
h1
	display block
	width 30%
	height 100%
	padding 0
	margin 0 2%
	position relative
	@media $landscape
		align_middle()
		width calc( 100% - 50px)
		margin 0
		max-height 130px
	
	
		
.logoWSH
	height 100%
	width auto
	display block
	svg
		width 100%
		max-height 100%
		center()
		@media $landscape
			top 0
			transform none
			align_middle()
		
		@media $mobile_landscape
			top 0
			transform none
			align_middle()
	
span.lign_header
	display block
	width 1px
	height 80px 
	background $light-yellow 
	position absolute
	vert_align_middle()
	left 33%
	@media $landscape
		display none