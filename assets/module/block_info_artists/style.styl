#artists_info
	display block
	position absolute
	height 200px
	width 200px
	bottom 0px
	right 10px
	list-style none
	margin 0
	padding 0
	
	@media $mobile_et_ipad
		top 5px
		bottom auto
		height $height_header_info_mobile
		width calc( 100% - 150px )
		
	li
		position absolute
		top 0
		left 0
		opacity 0
		
		span
			display block
			width 100%
		
		.name
			text-transform uppercase
			font-family $ft-family-secondary
			font-size 3em
			line-height .8em
		
		.tagline
		.date
			color $yellow
			
		.tagline
			font-weight 900
		
		.date
		.contry
			font-weight 100
			font-family $ft-family-secondary
			display inline-block
			width auto
			font-size 2.4em
			
			&.contry
				padding-right 10px
			