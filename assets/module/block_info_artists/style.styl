#artists_info
	display block
	position absolute
	list-style none
	margin 0
	padding 0
	right 0px
	transition opacity 1s
	overflow hidden

	li
		position absolute
		top 0
		left 0
		overflow hidden
		color #ffffff
		
		.warper
			opacity 0
		
		span
			display block
			width 100%
		
		h3.name
			padding 0
			margin 7px 0
		.name
		.date
		.tagline
		.contry
			line-height .9em

		.date
		.contry
		.tagline
			font-family $ft-family-secondary
		
		.name
			font-family $ft-family-primary
			text-transform uppercase
			line-height 1em
			font-weight 900
		
		.name
		.date
			color $yellow
			
		.date
		.contry
			font-size 3em
		
		.name
			font-size 2.5em
		
		.tagline
			font-size 4em
		
		.date
		.contry
			font-weight 100
			display inline-block
			width auto
			
			&.contry
				padding-right 10px
				
		#about-btn
			background #333333
			color #fff
			font-size .5em
			margin 0px 6px
			padding 0 15px
			display inline-block
			top -2px
			position relative
			
			@media $ipad
				font-size .9em
				margin 0px 20px
			
			@media $desktop
				font-size .75em
				margin 10px 0
				padding 0 15px
				display block
	
	@media $mobile_et_ipad
		top O
		bottom auto
		li
			border-left 2px solid $light-yellow
			padding 0 10px
			transition opacity 1s
			.hidefooter &
				border-left none
				opacity 0
				
			vert_align_middle()
			.name
			.date
				color #ffffff
			
			.tagline
				color #000
		
			
	@media $mobile
		height $height_header_info_mobile
		width calc( 100% - 95px )
		li
			.name
				font-size .95em
				padding 3px 0
			
			.tagline
			.contry
			.date
				font-size 1em
			
	@media $ipad
		height $height_header_info_ipad
		width calc( 100% - 180px )
		li
			.name
				font-size 1.5em
				padding 10px 0
			
			.tagline
			.date
			.contry
				font-size 2.7em
				
	@media $desktop
		height 300px
		width 100%
		bottom 0
		left 0px
		background #010101
		li
			bottom 0
			width 100%
			.warper
				height auto
				center()
				width calc(100% - 50px)
				
				.tagline
				.contry
					color $yellow
				.date
				.name
					color #ffffff
				
				.warp_contry_date
					display inline-block
					width 100%

				#about-btn
					display inline-block
					
				.name
					font-size 1.32em
					
				.tagline
					font-size 2.6em
					
				.date
				.contry
					font-size 3.18em